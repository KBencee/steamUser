<Window x:Class="streamUserWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam User" Height="450" Width="800">
    <Grid>
        <Button Name="btnLoad" Content="Betöltés" Click="btnLoad_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <Button Name="btnBestRated" Content="Legjobban értékelt játék" Click="btnBestRated_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="70,10,0,0"/>
        <Button Name="btnWorstRated" Content="Legrosszabbul értékelt játék" Click="btnWorstRated_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="215,10,0,0"/>
        <Button Name="btnFirstReleased" Content="Elsőként kiadott játék(ok)" Click="btnFirstReleased_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,10,0,0"/>
        <Button Name="btnLastReleased" Content="Utolsóként kiadott játék(ok)" Click="btnLastReleased_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="562,10,0,0"/>
        <DataGrid Name="dgJatekok" AutoGenerateColumns="True" Margin="10,50,10,10"/>
    </Grid>
</Window>
